---
import Container from './Container.astro'
import SocialNetworks from './SocialNetworks.astro'

const NAV_ENTRIES = [
	{
		name: 'Bordado',
		href: '/bordados'
	},
	{
		name: 'Corte y confección',
		href: '/corteyconfeccion'
	},
	{
		name: 'Trabajos',
		href: '/trabajos'
	}
]
---

<footer class='page-footer text-white w-full p-12 bg-gradient-to-b from-marron via-marron to-principal relative overflow-hidden [&>div]:relative [&>div]:z-10 [&_a]:text-xl'>
	<Container>
		<section class='flex flex-col justify-center lg:flex-row lg:justify-between gap-10 text-sm my-10'>
			<a href='/'>
				<img
					class='mx-auto lg:ml-0 aspect-[208/92]'
					src='/logos/adler-logo.svg'
					alt='logo de Adler'
					loading='lazy'
					decoding='async'
					fetchpriority='low'
					width='230'
					height='92'
				/>
			</a>

			<nav class='flex flex-wrap gap-5 justify-center lg:justify-around lg:justify-between lg:gap-x-14 lg:gap-y-4'>
				{
					NAV_ENTRIES.map((entry) => (
						<a href={entry.href} class='text-center lg:text-left hover:underline font-semibold'>
							{entry.name}
						</a>
					))
				}
			</nav>
		</section>

		<section
			class='flex flex-col lg:flex-row text-center lg:text-left gap-14 lg:gap-4 text-sm text-lig my-10'
		>
			<nav
				class='flex flex-col lg:flex-row gap-5 md:gap-4 justify-between w-full align-middle items-center'
			>
				<SocialNetworks theme='dark' />

				<nav class='flex flex-wrap gap-5 justify-center lg:justify-around'>
					<a class="font-semibold hover:underline" href="/">Inicio</a>
					<a class="font-semibold hover:underline" href="/quienessomos">Quiénes Somos</a>
					<a class="font-semibold hover:underline" href="/contacto">Contacto</a>
				</nav>
			</nav>
		</section>
	</Container>
</footer>

<style>
	.page-footer::after {
		content: '';
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
		background: url('/logos/adler.svg') no-repeat;
		background-size: 80%;
  	background-position: center right;
  	opacity: 0.12;
		pointer-events: none;
	}

	@media screen and (min-width: 992px) {
		.page-footer::after {
			background-size: 26%;
		}
	}
</style>
